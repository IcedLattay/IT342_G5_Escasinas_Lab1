<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".SignupActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:background="@color/transparent"
            android:padding="20dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:gravity="center_horizontal">


        <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Create an account"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="150dp"/>


        <!-- Username Field -->
        <LinearLayout
            android:id="@+id/usernameFieldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/usernameEditText"
                android:hint="Username"
                android:fontFamily="@font/dm_sans_regular"
                android:textColorHint="#7a7a7a"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

            <!-- This text view is only seen when the edit field is not focused -->
            <TextView
                android:layout_gravity="start"
                android:text="This is an error"
                android:textColor="#D60E0E"
                android:textSize="11sp"
                android:id="@+id/usernameErrorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

            <!-- This layout that contains the texts/rules only appear when edit field is unfocused        -->
            <LinearLayout
                android:id="@+id/usernameRulesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/usernameRuleCheckmark1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/checkmark"
                        android:layout_marginTop="2.5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/usernameRule1"
                        android:text="Is 3-20 characters long"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/rule_static"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/usernameRuleCheckmark2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/checkmark"
                        android:layout_marginTop="2.5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/usernameRule2"
                        android:text="Only contains letters, numbers, and _"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/rule_static"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <!-- Email Address Field -->
        <LinearLayout
            android:id="@+id/emailFieldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/emailAddressEditText"
                android:hint="Email Address"
                android:fontFamily="@font/dm_sans_regular"
                android:textColorHint="#7a7a7a"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/emailErrorTextView"
                android:layout_gravity="start"
                android:text="This is an error"
                android:textColor="#D60E0E"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

        </LinearLayout>



        <!-- Password Field -->
        <LinearLayout
            android:id="@+id/passwordFieldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:hint="Password"
                android:fontFamily="@font/dm_sans_regular"
                android:textColorHint="#7a7a7a"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

            <!-- This text view is only seen when the edit field is not focused -->
            <TextView
                android:layout_gravity="start"
                android:text="This is an error"
                android:textColor="#D60E0E"
                android:textSize="11sp"
                android:id="@+id/passwordErrorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

            <!-- This layout that contains the texts/rules only appear when edit field is unfocused        -->
            <LinearLayout
                android:id="@+id/passwordRulesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/passwordRuleCheckmark1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/checkmark"
                        android:layout_marginTop="2.5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/passwordRule1"
                        android:text="Is at least 8 characters long"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/rule_static"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/passwordRuleCheckmark2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/checkmark"
                        android:layout_marginTop="2.5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/passwordRule2"
                        android:text="Contains at least one uppercase and lowercase letters"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/rule_static"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/passwordRuleCheckmark3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/checkmark"
                        android:layout_marginTop="2.5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/passwordRule3"
                        android:text="Contains at least one number"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/rule_static"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



        <!-- Confirm Password Field -->
        <LinearLayout
            android:id="@+id/confirmPasswordFieldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:hint="Confirm Password"
                android:fontFamily="@font/dm_sans_regular"
                android:textColorHint="#7a7a7a"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/confirmPasswordTextView"
                android:layout_gravity="start"
                android:text="This is an error"
                android:textColor="#D60E0E"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/signupButton"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Sign up"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/button_text"
            android:elevation="0dp"
            android:letterSpacing="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="10dp"
            app:backgroundTint="@color/button_bg"
            app:cornerRadius="12dp"
            android:enabled="false"/>

    </LinearLayout>
</LinearLayout>





</LinearLayout>